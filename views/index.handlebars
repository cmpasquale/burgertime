<div class="header">
    <div class="container1">
        <h1 class="display-4">BURGERTIME!</h1>
    </div>
    <img src="https://wallpaperplay.com/walls/full/5/5/e/84321.jpg" alt="cartoon burger">
</div>

<div class="row">
    <div class="column">
        <h1 class="display-4">Burgers that have not yet been devoured!</h1>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="column">
        <h1 class="display-4">Burgers that have been devoured!</h1>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <div class="column">
        <h1>Add a Burger</h1>
        <form class="create-form">

            <div class="form-group">
                <label for="bur">Burger Name:</label>
                <input type="text" id="bur" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Not Devoured
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>

</div>